
.container.data-v-1cf27b2a {
		min-height: 100vh;
		background-color: #f5f5f5;
		padding: 0;
		padding-bottom: 120rpx;
}
	
	/* 顶部标题栏 */
.header.data-v-1cf27b2a {
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding: 20rpx 30rpx;
		background-color: #fff;
		margin-bottom: 20rpx;
}
.header-title.data-v-1cf27b2a {
		font-size: 36rpx;
		font-weight: bold;
		color: #333;
}
.header-actions.data-v-1cf27b2a {
		display: flex;
		gap: 20rpx;
}

	/* 轮播图样式 */
.swiper-wrapper.data-v-1cf27b2a {
		margin: 0 20rpx 40rpx;
		border-radius: 15rpx;
		overflow: hidden;
		box-shadow: 0 8rpx 25rpx rgba(0, 0, 0, 0.1);
}
.swiper.data-v-1cf27b2a {
		height: 400rpx;
		border-radius: 15rpx;
}
.swiper-image.data-v-1cf27b2a {
		width: 100%;
		height: 100%;
		object-fit: cover;
}

	/* 功能模块 */
.function-section.data-v-1cf27b2a {
		padding: 20rpx;
}
.function-grid.data-v-1cf27b2a {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 20rpx;
}
.function-item.data-v-1cf27b2a {
		background-color: #fff;
		border-radius: 20rpx;
		padding: 40rpx 20rpx;
		text-align: center;
		box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
		transition: transform 0.2s;
}
.function-item.data-v-1cf27b2a:active {
		transform: scale(0.98);
}
.function-icon.data-v-1cf27b2a {
		width: 100rpx;
		height: 100rpx;
		margin: 0 auto 20rpx;
		border-radius: 20rpx;
		display: flex;
		align-items: center;
		justify-content: center;
		background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}
.icon-emoji.data-v-1cf27b2a {
		font-size: 60rpx;
		color: #fff;
}
.function-title.data-v-1cf27b2a {
		display: block;
		font-size: 32rpx;
		font-weight: bold;
		color: #333;
		margin-bottom: 10rpx;
}
.function-subtitle.data-v-1cf27b2a {
		display: block;
		font-size: 24rpx;
		color: #999;
		line-height: 1.4;
}

	/* 内容生成区域 */
.content-generation.data-v-1cf27b2a {
		margin: 20rpx;
}
.section-title.data-v-1cf27b2a {
		font-size: 32rpx;
		font-weight: bold;
		color: #333;
		margin-bottom: 20rpx;
		padding-left: 10rpx;
}

	/* 视频预览区域 */
.video-preview.data-v-1cf27b2a {
		background-color: #fff;
		border-radius: 20rpx;
		overflow: hidden;
		box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}
.video-container.data-v-1cf27b2a {
		position: relative;
		height: 400rpx;
		background-color: #f0f0f0;
}
.video-thumbnail.data-v-1cf27b2a {
		width: 100%;
		height: 100%;
		object-fit: cover;
}
.video-overlay.data-v-1cf27b2a {
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: rgba(0, 0, 0, 0.3);
		display: flex;
		align-items: center;
		justify-content: center;
}
.play-button.data-v-1cf27b2a {
		width: 120rpx;
		height: 120rpx;
		border-radius: 50%;
		background-color: rgba(255, 255, 255, 0.9);
		display: flex;
		align-items: center;
		justify-content: center;
		box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.3);
}
.play-icon.data-v-1cf27b2a {
		font-size: 48rpx;
		color: #333;
		margin-left: 8rpx;
}
.video-counter.data-v-1cf27b2a {
		position: absolute;
		bottom: 20rpx;
		left: 20rpx;
		width: 60rpx;
		height: 60rpx;
		border-radius: 50%;
		background-color: rgba(0, 0, 0, 0.6);
		color: #fff;
		font-size: 32rpx;
		font-weight: bold;
		display: flex;
		align-items: center;
		justify-content: center;
}
.video-actions.data-v-1cf27b2a {
		position: absolute;
		top: 20rpx;
		right: 20rpx;
		display: flex;
		flex-direction: column;
		gap: 20rpx;
}
.action-download.data-v-1cf27b2a,
	.action-delete.data-v-1cf27b2a {
		width: 80rpx;
		height: 80rpx;
		border-radius: 50%;
		background-color: rgba(255, 255, 255, 0.9);
		display: flex;
		align-items: center;
		justify-content: center;
		box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
		transition: transform 0.2s;
}
.action-download.data-v-1cf27b2a:active,
	.action-delete.data-v-1cf27b2a:active {
		transform: scale(0.95);
}
.action-icon.data-v-1cf27b2a {
		font-size: 40rpx;
}
.video-info.data-v-1cf27b2a {
		padding: 20rpx;
		border-top: 1rpx solid #eee;
}
.video-filename.data-v-1cf27b2a {
		font-size: 28rpx;
		color: #666;
		line-height: 1.4;
}
